# Gemini API (used for summarization and RAG-enhanced chat)
GEMINI_MODEL_NAME=gemini-2.5-flash
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API (used for fast chat without RAG)
GROQ_MODEL_NAME=meta-llama/llama-4-scout-17b-16e-instruct
GROQ_API_KEY=your_groq_api_key_here

# Database (PostgreSQL with pgvector - use docker-compose.yml)
DATABASE_URL=postgresql+asyncpg://dev:dev@localhost:5432/ytsum_dev

# DataImpulse Proxy
DATAIMPULSE_HOST=gw.dataimpulse.com
DATAIMPULSE_PORT=823
DATAIMPULSE_LOGIN=
DATAIMPULSE_PASSWORD=

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
SECRET_KEY=

# RAG Embedding (optional - see docs/configuration.md)
# EMBEDDING_MODEL=intfloat/multilingual-e5-large

# Summarization Limits (optional - see docs/configuration.md for calculation formula)
# SUMMARIZATION_MAX_INPUT_CHARS=2000000
# SUMMARIZATION_BATCH_THRESHOLD=3000000
# SUMMARIZATION_CHUNK_SIZE=2000000
